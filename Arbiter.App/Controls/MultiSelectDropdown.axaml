<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:c="using:Arbiter.App.Controls"
             mc:Ignorable="d" d:DesignWidth="160" d:DesignHeight="60"
             x:Class="Arbiter.App.Controls.MultiSelectDropdown"
             x:DataType="c:MultiSelectDropdown">
    <UserControl.Styles>
        <!-- Match ComboBox hover/focus border behavior on the host border -->
        <Style Selector="Border#DropdownBorder.focused">
            <Setter Property="BorderBrush" Value="{StaticResource Talgonite.ComboBox.FocusBorderBrush}"/>
        </Style>
        
        <!-- Popup item visuals similar to ComboBox items -->
        <Style Selector="ListBoxItem">
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="MinHeight" Value="32"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        
        <Style Selector="ListBoxItem:selected">
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        
        <Style Selector="ListBoxItem:pointerover">
            <Setter Property="Background" Value="{StaticResource Talgonite.ComboBoxItem.HoverBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource Talgonite.ComboBoxItem.HoverForeground}"/>
        </Style>
    </UserControl.Styles>
    
    <Grid>
        <Border Name="DropdownBorder"
                Background="{StaticResource Talgonite.ComboBox.Background}"
                BorderBrush="Transparent"
                BorderThickness="2"
                CornerRadius="2"
                MinWidth="100"
                MinHeight="40">
            
            <Grid ColumnDefinitions="*,Auto">
                <!-- Sunken Effect -->
                <Border Grid.Column="0" Grid.ColumnSpan="2" Classes="sunken-shadow" CornerRadius="2"/>
                <Border Grid.Column="0" Grid.ColumnSpan="2" Classes="sunken-highlight" CornerRadius="2"/>
                
                <!-- Display Area (non-clickable) -->
                <Border Grid.Column="0"
                        Background="Transparent"
                        Padding="8,4"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center">
                    <TextBlock Text="{Binding DisplayText, RelativeSource={RelativeSource AncestorType=c:MultiSelectDropdown}}"
                               Foreground="{StaticResource Talgonite.ComboBox.Foreground}"
                               TextTrimming="CharacterEllipsis"
                               VerticalAlignment="Center"/>
                </Border>
                
                <!-- Dropdown Toggle -->
                <ToggleButton Name="DropdownButton"
                              Grid.Column="1"
                              Width="32"
                              IsChecked="{Binding IsOpen, RelativeSource={RelativeSource AncestorType=c:MultiSelectDropdown}, Mode=TwoWay}"
                              Background="Transparent"
                              Foreground="{StaticResource Talgonite.ComboBox.CaretForeground}"
                              CornerRadius="4"
                              ClickMode="Press"
                              Focusable="False">
                    <Path Width="16" Height="8"
                          Stroke="{Binding $parent[ToggleButton].Foreground}"
                          Data="{StaticResource Talgonite.Icon.DownCaret}"/>
                </ToggleButton>
            </Grid>
        </Border>
        
        <!-- Popup -->
        <Popup Name="ItemPopup"
               PlacementTarget="{Binding #DropdownBorder}"
               Placement="BottomEdgeAlignedLeft"
               Width="{Binding #DropdownBorder.Bounds.Width}"
               MaxHeight="400"
               IsLightDismissEnabled="True"
               IsOpen="{Binding IsOpen, RelativeSource={RelativeSource AncestorType=c:MultiSelectDropdown}}">
            <Border Background="{StaticResource Talgonite.ComboBox.Background}"
                    BorderBrush="{StaticResource Talgonite.ComboBox.PopupBorderBrush}"
                    BorderThickness="1,0,1,1"
                    Padding="2,2,0,2">
                <Panel>
                    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                  HorizontalScrollBarVisibility="Disabled"
                                  Background="Transparent">
                        <ItemsRepeater ItemsSource="{Binding ItemsSource, RelativeSource={RelativeSource AncestorType=c:MultiSelectDropdown}}"
                                       ItemTemplate="{Binding ItemTemplate, RelativeSource={RelativeSource AncestorType=c:MultiSelectDropdown}}">
                            <ItemsRepeater.Layout>
                                <StackLayout Spacing="0" Orientation="Vertical"/>
                            </ItemsRepeater.Layout>
                        </ItemsRepeater>
                    </ScrollViewer>
                </Panel>
            </Border>
        </Popup>
    </Grid>
</UserControl>
