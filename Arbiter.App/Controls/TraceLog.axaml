<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Arbiter.App.ViewModels"
             xmlns:behaviors="using:Arbiter.App.Behaviors"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Arbiter.App.Controls.TraceLog"
             x:DataType="vm:TraceViewModel">
   <Grid RowDefinitions="Auto,*" RowSpacing="4">
        <Border Grid.Row="0" Padding="4">
            <Grid ColumnDefinitions="*,*,*">
                <!-- Left Side Buttons -->
                <WrapPanel Grid.Column="0" Orientation="Horizontal" ItemSpacing="4">
                    <!-- Start Trace Button -->
                    <Button Command="{Binding StartTracingCommand}"
                            ToolTip.Tip="Starts a new packet trace."
                            Classes="toolbar"
                            IsEnabled="{Binding IsRunning, Converter={x:Static BoolConverters.Not}}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Path Width="16" Height="16"
                                  Stroke="{Binding $parent[Button].Foreground}"
                                  StrokeThickness="2"
                                  StrokeLineCap="Round"
                                  StrokeJoin="Round"
                                  Stretch="None"
                                  Data="M0,0 L16,8 L0,16 Z"/>
                        </StackPanel>
                    </Button>
                    <!-- Stop Trace Button -->
                    <Button Command="{Binding StopTracingCommand}"
                            ToolTip.Tip="Stops the current packet trace."
                            Classes="toolbar"
                            IsEnabled="{Binding IsRunning}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Path Width="16" Height="16"
                                  Stroke="{Binding $parent[Button].Foreground}"
                                  StrokeThickness="2"
                                  StrokeLineCap="Round"
                                  StrokeJoin="Round"
                                  Stretch="None"
                                  Data="M0,0 H16 V16 H0 Z"/>
                        </StackPanel>
                    </Button>
                </WrapPanel>
                
                <!-- Center Buttons -->
                <WrapPanel Grid.Column="1" Orientation="Horizontal" ItemSpacing="4" ItemsAlignment="Center">
                    <!-- Display Mode -->
                    <StackPanel Orientation="Horizontal">
                        <!-- Decrypted Display -->
                        <RadioButton IsChecked="{Binding ShowRawPackets, Converter={x:Static BoolConverters.Not}}"
                                     GroupName="DisplayMode"
                                     ToolTip.Tip="Shows the decrypted payload of packets."
                                     Classes="segment segment-left">
                            <StackPanel Orientation="Horizontal" Spacing="4">
                                <Canvas Width="16" Height="16" ClipToBounds="True">
                                    <Path Width="16" Height="16"
                                          Stroke="{Binding $parent[RadioButton].Foreground}"
                                          StrokeThickness="2"
                                          StrokeLineCap="Round"
                                          StrokeJoin="Round"
                                          Stretch="None"
                                          Data="M1,8 C3,2 13,2 15,8 C13,14 3,14 1,8 Z"/>
                                    <Path Width="16" Height="16"
                                          Fill="{Binding $parent[RadioButton].Foreground}"
                                          StrokeThickness="2"
                                          StrokeLineCap="Round"
                                          StrokeJoin="Round"
                                          Stretch="None"
                                          Data="M8,4 C9,4 11,6 11,8 C11,10 9,12 8,12 C7,12 5,10 5,8 C5,6 7,4 8,4 Z"/>
                                </Canvas>
                                <TextBlock Text="Decrypted"/>
                            </StackPanel>
                        </RadioButton>
                        <!-- Encrypted (Raw) Display -->
                        <RadioButton IsChecked="{Binding ShowRawPackets}"
                                     GroupName="DisplayMode"
                                     ToolTip.Tip="Shows the full encrypted packets."
                                     Classes="segment segment-right">
                            <StackPanel Orientation="Horizontal" Spacing="4">
                                <Path Width="16" Height="16"
                                      Stroke="{Binding $parent[RadioButton].Foreground}"
                                      StrokeThickness="2"
                                      StrokeLineCap="Round"
                                      StrokeJoin="Round"
                                      Stretch="None"
                                      Data="M4,7 V4 A4,4 0 0 1 12,4 V7 M2,7 H14 V15 H2 Z"/>
                                <TextBlock Text="Encrypted"/>
                            </StackPanel>
                        </RadioButton>
                    </StackPanel>
                </WrapPanel>
                
                <!-- Right Side Buttons -->
                <WrapPanel Grid.Column="2" Orientation="Horizontal" ItemSpacing="4" ItemsAlignment="End">
                    <!-- Load Trace Button -->
                    <Button Command="{Binding LoadTraceCommand}"
                            ToolTip.Tip="Loads a trace from a file."
                            IsEnabled="{Binding IsRunning, Converter={x:Static BoolConverters.Not}}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Path Width="16" Height="16"
                                  Stroke="{Binding $parent[Button].Foreground}"
                                  StrokeThickness="2"
                                  StrokeLineCap="Round"
                                  StrokeJoin="Round"
                                  Stretch="None"
                                  Data="M0,0 H8 L10,4 H16 V16 H0 Z"/>
                        </StackPanel>
                    </Button>
                    <!-- Save Trace Button -->
                    <Button Command="{Binding SaveTraceCommand}"
                            ToolTip.Tip="Saves this trace to a file."
                            IsEnabled="{Binding IsEmpty, Converter={x:Static BoolConverters.Not}}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Path Width="16" Height="16"
                                  Stroke="{Binding $parent[Button].Foreground}"
                                  StrokeThickness="2"
                                  StrokeLineCap="Round"
                                  StrokeJoin="Round"
                                  Stretch="None"
                                  Data="M0,0 H12 L16,4 V16 H0 Z M4,0 H12 V7 H4 Z M4,10 H12 V16 H4 Z"/>
                        </StackPanel>
                    </Button>
                    <!-- Clear Trace Button -->
                    <Button Command="{Binding ClearTraceCommand}"
                            ToolTip.Tip="Clears all packets from the trace."
                            Classes="toolbar destructive"
                            IsEnabled="{Binding IsEmpty, Converter={x:Static BoolConverters.Not}}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Path Width="16" Height="16"
                                  Stroke="{Binding $parent[Button].Foreground}"
                                  StrokeThickness="2"
                                  StrokeLineCap="Round"
                                  StrokeJoin="Round"
                                  Stretch="None"
                                  RenderTransform="rotate(25deg)"
                                  Data="M8 0 V12 M3 12 H13 M3 14 H13 M4 12 V14 M6 12 V14 M9 12 V14 M11 12 V14"/>
                        </StackPanel>
                    </Button>
                    <!-- Scroll to End Button -->
                    <Button Command="{Binding ScrollToEndCommand}"
                            ToolTip.Tip="Scrolls to the end of the trace."
                            Classes="toolbar">
                        <Path Width="16"
                              Height="16"
                              Stroke="{Binding $parent[Button].Foreground}"
                              StrokeThickness="2"
                              Stretch="None"
                              Data="M8,0     L8,14
                                    M2,8     L8,14    L14,8
                                    M0,16    L16,16"/>
                    </Button>
                </WrapPanel>
            </Grid>
        </Border>
        <ListBox Grid.Row="1"
                 ItemsSource="{Binding FilteredPackets}"
                 ItemTemplate="{StaticResource TracePacketTemplate}"
                 FontFamily="{StaticResource Talgonite.Font.TraceFont}"
                 FontSize="{StaticResource Talgonite.FontSize.Trace}"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 behaviors:ScrollToEndBehavior.AutoScrollToEnd="True"
                 behaviors:ScrollToEndBehavior.ScrollToEnd="{Binding ScrollToEndRequested}"/>
   </Grid>
</UserControl>
