<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Arbiter.App.ViewModels"
             xmlns:behaviors="using:Arbiter.App.Behaviors"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Arbiter.App.Controls.TraceLog"
             x:DataType="vm:TraceViewModel">
   <Grid RowDefinitions="Auto,*" RowSpacing="4">
        <Border Grid.Row="0" Padding="4">
            <Grid ColumnDefinitions="Auto,*,Auto,*,Auto">
                <!-- Left Side Buttons -->
                <WrapPanel Grid.Column="0" Orientation="Horizontal" ItemSpacing="8">
                    <!-- Start Trace Button -->
                    <Button Command="{Binding StartTracingCommand}"
                            ToolTip.Tip="Starts a new packet trace."
                            Classes="toolbar"
                            IsEnabled="{Binding IsRunning, Converter={x:Static BoolConverters.Not}}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Path Width="16" Height="16"
                                  Stroke="{Binding $parent[Button].Foreground}"
                                  StrokeThickness="2"
                                  StrokeLineCap="Round"
                                  StrokeJoin="Round"
                                  Stretch="None"
                                  Data="M1,1 L15,8 L1,15 Z"/>
                            <TextBlock Text="Start"/>
                        </StackPanel>
                    </Button>
                    <!-- Stop Trace Button -->
                    <Button Command="{Binding StopTracingCommand}"
                            ToolTip.Tip="Stops the current packet trace."
                            Classes="toolbar"
                            IsEnabled="{Binding IsRunning}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Path Width="16" Height="16"
                                  Stroke="{Binding $parent[Button].Foreground}"
                                  StrokeThickness="2"
                                  StrokeLineCap="Round"
                                  StrokeJoin="Round"
                                  Stretch="None"
                                  Data="M1,1 H15 V15 H1 Z"/>
                            <TextBlock Text="Stop"/>
                        </StackPanel>
                    </Button>
                </WrapPanel>
                
                <!-- Center Buttons -->
                <WrapPanel Grid.Column="2" Orientation="Horizontal" ItemSpacing="8" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" Spacing="16">
                        <RadioButton IsChecked="{Binding ShowRawPackets, Converter={x:Static BoolConverters.Not}}"
                                     GroupName="DisplayMode"
                                     Classes="segment segment-left">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Show Decrypted"/>
                            </StackPanel>
                        </RadioButton>
                        <RadioButton IsChecked="{Binding ShowRawPackets}"
                                     GroupName="DisplayMode"
                                     Classes="segment segment-right">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Show Raw"/>
                            </StackPanel>
                        </RadioButton>
                    </StackPanel>
                </WrapPanel>
                
                <!-- Right Side Buttons -->
                <WrapPanel Grid.Column="4" Orientation="Horizontal" ItemSpacing="8">
                    <!-- Clear Trace Button -->
                    <Button Command="{Binding ClearTraceCommand}"
                            ToolTip.Tip="Clears all packets from the trace."
                            Classes="toolbar destructive"
                            IsEnabled="{Binding IsEmpty, Converter={x:Static BoolConverters.Not}}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Path Width="16" Height="16"
                                  Stroke="{Binding $parent[Button].Foreground}"
                                  StrokeThickness="2"
                                  StrokeLineCap="Round"
                                  StrokeJoin="Round"
                                  Stretch="None"
                                  Margin="2,0,0,0"
                                  RenderTransform="rotate(20deg)"
                                  Data="M8 0 V12 M3 12 H13 M3 14 H13 M4 12 V14 M6 12 V14 M9 12 V14 M11 12 V14"/>
                            <TextBlock Text="Clear"/>
                        </StackPanel>
                    </Button>
                </WrapPanel>
            </Grid>
        </Border>
        <ListBox Grid.Row="1"
                 ItemsSource="{Binding FilteredPackets}"
                 ItemTemplate="{StaticResource TracePacketTemplate}"
                 FontFamily="{StaticResource Talgonite.Font.TraceFont}"
                 FontSize="{StaticResource Talgonite.FontSize.Trace}"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 behaviors:ScrollToEndBehavior.AutoScrollToEnd="True"
                 behaviors:ScrollToEndBehavior.ScrollToEnd="{Binding ScrollToEndRequested}"/>
   </Grid>
</UserControl>
