<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Arbiter.App.ViewModels"
             mc:Ignorable="d" d:DesignWidth="360" d:DesignHeight="580"
             x:Class="Arbiter.App.Controls.RawHexDisplay"
             x:DataType="vm:RawHexViewModel">
    <Grid RowDefinitions="Auto,*">
        <Border Grid.Row="0" Grid.RowSpan="2"
                Background="{StaticResource Talgonite.Control.Background}"/>
        
        <UniformGrid Grid.Row="0" Rows="1" Columns="2" Margin="0,8">
            <!-- Command Byte -->
            <StackPanel Orientation="Horizontal" Spacing="8">
                <Label Content="Command"/>
                <TextBox Text="{Binding FormattedCommand, Mode=OneWay}"
                         TextAlignment="Right"
                         Watermark="--"
                         Classes="read-only"
                         IsReadOnly="True"
                         MinWidth="60"
                         Focusable="False"/>
            </StackPanel>
            
            <!-- Sequence Byte -->
            <StackPanel Orientation="Horizontal" Spacing="8">
                <Label Content="Sequence"/>
                <TextBox Text="{Binding FormattedSequence, Mode=OneWay}"
                         TextAlignment="Right"
                         Watermark="--"
                         Classes="read-only"
                         IsReadOnly="True"
                         MinWidth="60"
                         Focusable="False"/>
            </StackPanel>
        </UniformGrid>
        
        <TextBox Name="HexTextBox"
                 Grid.Row="1"
                 Text="{Binding RawHex, Mode=OneWay}"
                 SelectionStart="{Binding SelectionStart, Mode=OneWay}"
                 SelectionEnd="{Binding SelectionEnd, Mode=OneWay}"
                 ClearSelectionOnLostFocus="False"
                 Classes="editor"
                 IsReadOnly="True"
                 FontSize="16"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
    </Grid>

</UserControl>
