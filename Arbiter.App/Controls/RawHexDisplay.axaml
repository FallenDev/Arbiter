<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Arbiter.App.ViewModels"
             mc:Ignorable="d" d:DesignWidth="360" d:DesignHeight="580"
             x:Class="Arbiter.App.Controls.RawHexDisplay"
             x:DataType="vm:RawHexViewModel">
    <Grid RowDefinitions="Auto,Auto,Auto,*,Auto,*">
        <Border Grid.Row="0" Grid.RowSpan="6"
                Background="{StaticResource Talgonite.Control.Background}"
                IsHitTestVisible="False"
                Focusable="False"/>
        
        <UniformGrid Grid.Row="0" Rows="1" Columns="2" Margin="4,8">
            <!-- Command Byte -->
            <StackPanel Orientation="Horizontal" Spacing="8">
                <Label Content="Command"
                       ToolTip.Tip="Command code of the packet."/>
                <TextBox Text="{Binding FormattedCommand, Mode=OneWay}"
                         TextAlignment="Right"
                         Watermark="--"
                         Classes="read-only"
                         IsReadOnly="True"
                         MinWidth="60"
                         Focusable="False"/>
            </StackPanel>
            
            <!-- Sequence Byte -->
            <StackPanel Orientation="Horizontal" Spacing="8">
                <Label Content="Sequence"
                       ToolTip.Tip="Incremental sequence number of the packet."/>
                <TextBox Text="{Binding FormattedSequence, Mode=OneWay}"
                         TextAlignment="Right"
                         Watermark="--"
                         Classes="read-only"
                         IsReadOnly="True"
                         MinWidth="60"
                         Focusable="False"/>
            </StackPanel>
        </UniformGrid>
        
        <Border Grid.Row="1" Classes="divider-h" Margin="0,2,0,4"/>
        
        <!-- Payload View -->
        <Label Grid.Row="2"
               Content="Payload"
               ToolTip.Tip="Decrypted payload of the packet."
               Margin="4"/>
        <TextBox Name="HexTextBox"
                 Grid.Row="3"
                 Text="{Binding RawHex, Mode=OneWay}"
                 SelectionStart="{Binding SelectionStart, Mode=OneWay}"
                 SelectionEnd="{Binding SelectionEnd, Mode=OneWay}"
                 ClearSelectionOnLostFocus="False"
                 Classes="editor"
                 IsReadOnly="True"
                 FontSize="16"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
        
        <!-- -->
        <Label Grid.Row="4"
               Content="Text"
               ToolTip.Tip="Decoded ASCII text of the selected bytes."
               Margin="4"/>
        <TextBox Name="AsciiTextBox"
                 Grid.Row="5"
                 Text="{Binding DecodedText, Mode=OneWay}"
                 IsReadOnly="True"
                 ClearSelectionOnLostFocus="False"
                 Classes="editor"
                 FontSize="16"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
    </Grid>

</UserControl>
