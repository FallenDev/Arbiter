<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Button Previews -->
    <Design.PreviewWith>
        <Border Background="{StaticResource Talgonite.Control.Background}"
                Padding="20">
            <StackPanel Spacing="16">
                <Button>
                    Normal Button
                </Button>
                
                <Button IsEnabled="False">
                    Disabled Button
                </Button>
                
                <Border Classes="divider-h"/>
                
                <Button Classes="destructive">
                    Destructive Button
                </Button>
                
                <Button Classes="destructive" IsEnabled="False">
                    Destructive Disabled Button
                </Button>
                
                <Border Classes="divider-h"/>
                
                <Button Classes="toolbar">
                    Toolbar Button
                </Button>
                
                <Button Classes="toolbar" IsEnabled="False">
                    Toolbar Disabled Button
                </Button>
                
                <Border Classes="divider-h"/>
                
                <Button Classes="tab">
                    Tab Button
                </Button>
                
                <Button Classes="tab" IsEnabled="False">
                    Tab Disabled Button
                </Button>
            </StackPanel>
        </Border>
    </Design.PreviewWith>
    
    <Style Selector="Button">
        <Setter Property="Background" Value="{StaticResource Talgonite.Button.Background}"/>
        <Setter Property="Foreground" Value="{StaticResource Talgonite.Button.Foreground}"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="MinWidth" Value="16"/>
        <Setter Property="MinHeight" Value="16"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="Template">
            <ControlTemplate>
                <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{TemplateBinding CornerRadius}"
                        Padding="{TemplateBinding Padding}"
                        Margin="{TemplateBinding Margin}"
                        HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                        VerticalAlignment="{TemplateBinding VerticalAlignment}">
                    <ContentPresenter Name="PART_ContentPresenter"
                                      Content="{TemplateBinding Content}"
                                      ContentTemplate="{TemplateBinding ContentTemplate}"
                                      Foreground="{TemplateBinding Foreground}"
                                      HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                      VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                      RecognizesAccessKey="True"
                                      TextElement.Foreground="{TemplateBinding Foreground}"/>
                </Border>
            </ControlTemplate>
        </Setter>
        
        <!-- Hover Style -->
        <Style Selector="^:pointerover">
            <Setter Property="Background" Value="{StaticResource Talgonite.Button.HoverBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource Talgonite.Button.HoverForeground}"/>
        </Style>
        
        <!-- Pressed Style -->
        <Style Selector="^:pressed">
            <Setter Property="Background" Value="{StaticResource Talgonite.Button.PressedBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource Talgonite.Button.PressedForeground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Talgonite.Button.PressedBorderBrush}"/>
        </Style>
        
        <!-- Focus Style -->
        <Style Selector="^:focus">
            <Setter Property="BorderBrush" Value="{StaticResource Talgonite.Button.FocusBorderBrush}"/>
        </Style>
        
        <Style Selector="^:focus:pressed">
            <Setter Property="BorderBrush" Value="{StaticResource Talgonite.Button.PressedBorderBrush}"/>
        </Style>
        
        <!-- Destructive Button Style -->
        <Style Selector="^.destructive">
            <Setter Property="Background" Value="{StaticResource Talgonite.DestructiveButton.Background}"/>
            <Setter Property="Foreground" Value="{StaticResource Talgonite.DestructiveButton.Foreground}"/>
        </Style>
        
        <Style Selector="^.destructive:pointerover">
            <Setter Property="Background" Value="{StaticResource Talgonite.DestructiveButton.HoverBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource Talgonite.DestructiveButton.HoverForeground}"/>
        </Style>
        
        <Style Selector="^.destructive:pressed">
            <Setter Property="Background" Value="{StaticResource Talgonite.DestructiveButton.PressedBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource Talgonite.DestructiveButton.PressedForeground}"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
        </Style>
        
        <Style Selector="^.destructive:disabled">
            <Setter Property="Background" Value="{StaticResource Talgonite.Button.DisabledBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource Talgonite.Button.DisabledForeground}"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
        </Style>
        
        <!-- Play Button Style -->
        <Style Selector="^.play">
            <Setter Property="Foreground" Value="{StaticResource Talgonite.Button.PlayForeground}"/>
        </Style>
        <Style Selector="^.play:pressed">
            <Setter Property="BorderBrush" Value="{StaticResource Talgonite.Button.PlayForeground}"/>
        </Style>
        
        <!-- Stop Button Style -->
        <Style Selector="^.stop">
            <Setter Property="Foreground" Value="{StaticResource Talgonite.Button.StopForeground}"/>
        </Style>
        <Style Selector="^.stop:pressed">
            <Setter Property="BorderBrush" Value="{StaticResource Talgonite.Button.StopForeground}"/>
        </Style>
        
        <!-- Disabled Style -->
        <Style Selector="^:disabled">
            <Setter Property="Background" Value="{StaticResource Talgonite.Button.DisabledBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource Talgonite.Button.DisabledForeground}"/>
        </Style>
    </Style>
    
    <!-- Toolbar Button Style -->
    <Style Selector="Button.toolbar">
        <Setter Property="MinWidth" Value="40"/>
        <Setter Property="MinHeight" Value="40"/>
        <Setter Property="Focusable" Value="False"/>
        <Setter Property="IsTabStop" Value="False"/>
    </Style>
    

    
    <!-- Tab Button Style -->
    <Style Selector="Button.tab">
        <Setter Property="Background" Value="{StaticResource Talgonite.TabControl.Background}"/>
        <Setter Property="Foreground" Value="{StaticResource Talgonite.TabItem.Foreground}"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0,2,0,0"/>
        <Setter Property="MinHeight" Value="40"/>
        <Setter Property="CornerRadius" Value="0"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Padding" Value="16,8"/>
        <Setter Property="IsTabStop" Value="False"/>
        
        <!-- Hover Style -->
        <Style Selector="^.tab:pointerover">
            <Setter Property="Background" Value="{StaticResource Talgonite.Button.HoverBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource Talgonite.Button.HoverForeground}"/>
        </Style>
        
        <!-- Pressed Style -->
        <Style Selector="^.tab:pressed">
            <Setter Property="Background" Value="{StaticResource Talgonite.Button.PressedBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource Talgonite.Button.PressedForeground}"/>
        </Style>
        
        <!-- Disabled Style -->
        <Style Selector="^.tab:disabled">
            <Setter Property="Background" Value="{StaticResource Talgonite.TabItem.DisabledBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource Talgonite.TabItem.DisabledForeground}"/>
        </Style>
    </Style>
</Styles>
