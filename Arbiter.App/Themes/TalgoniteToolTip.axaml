<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="using:Arbiter.App.Converters">
    <Style Selector="ToolTip">
        <Setter Property="Background" Value="{StaticResource Talgonite.ToolTip.Background}"/>
        <Setter Property="Foreground" Value="{StaticResource Talgonite.ToolTip.Foreground}"/>
        <Setter Property="BorderBrush" Value="{StaticResource Talgonite.ToolTip.BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="ShowDelay" Value="400"/>
        <Setter Property="Template">
            <ControlTemplate>
                <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{TemplateBinding CornerRadius}"
                        Padding="{TemplateBinding Padding}">
                    <WrapPanel Orientation="Horizontal" ItemSpacing="8">
                        <ContentPresenter Name="PART_ContentPresenter"
                                          Content="{TemplateBinding Content}"
                                          ContentTemplate="{TemplateBinding ContentTemplate}"
                                          Foreground="{TemplateBinding Foreground}"
                                          HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        <!-- Hotkey Display -->
                        <Border IsVisible="{Binding $parent[Button], Converter={x:Static converters:HotKeyConverter.HasHotKey}, FallbackValue=False}">
                            <TextBlock Text="{Binding $parent[Button], Converter={x:Static converters:HotKeyConverter.GestureText}, StringFormat={}[{0}]}"
                                       Foreground="{StaticResource Talgonite.ToolTip.HotKeyForeground}"
                                       FontFamily="{StaticResource Talgonite.ToolTip.HotKeyFont}"
                                       FontWeight="Normal"
                                       VerticalAlignment="Center"/>
                        </Border>
                    </WrapPanel>
                </Border>
            </ControlTemplate>
        </Setter>
        
        <Style Selector="^">
            <Style.Animations>
                <Animation Duration="{StaticResource Talgonite.Transition.Duration}" Easing="CubicEaseOut" FillMode="Forward">
                    <KeyFrame Cue="0%">
                        <Setter Property="Opacity" Value="0"/>
                    </KeyFrame>
                    <KeyFrame Cue="100%">
                        <Setter Property="Opacity" Value="1"/>
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>
    </Style>
</Styles>
