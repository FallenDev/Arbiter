<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- ListBoxItem Previews -->
    <Design.PreviewWith>
        <Border Background="{StaticResource Talgonite.Control.Background}"
                Padding="20">
            <StackPanel MinWidth="200">
                <ListBoxItem>
                    <Border Padding="8,4">
                        <TextBlock Text="Normal Item" Foreground="White"/>
                    </Border>
                </ListBoxItem>
                <ListBoxItem IsSelected="True" Padding="8,4">
                    <Border>
                        <TextBlock Text="Selected Item" Foreground="White"/>
                    </Border>
                </ListBoxItem>
                <ListBoxItem IsEnabled="False" Padding="8,4">
                    <Border>
                        <TextBlock Text="Disabled Item" Foreground="White"/>
                    </Border>
                </ListBoxItem>
            </StackPanel>
        </Border>
    </Design.PreviewWith>
    
    <Style Selector="ListBoxItem">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="0"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Template">
            <ControlTemplate>
                <Panel>
                    <Border Name="SelectionHighlight" Background="Transparent">
                        
                    </Border>
                    
                    <ContentPresenter Name="PART_ContentPresenter"
                                      Content="{TemplateBinding Content}"
                                      ContentTemplate="{TemplateBinding ContentTemplate}"
                                      Background="Transparent"
                                      BorderBrush="{TemplateBinding BorderBrush}"
                                      BorderThickness="{TemplateBinding BorderThickness}"
                                      CornerRadius="{TemplateBinding CornerRadius}"
                                      HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                      VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                      Padding="{TemplateBinding Padding}"/>
                </Panel>
            </ControlTemplate>
        </Setter>
        
        <Style Selector="^:focus-visible /template/ ContentPresenter">
            
        </Style>
    
        <Style Selector="^:pointerover /template/ Border#SelectionHighlight">
            <Setter Property="Background" Value="{StaticResource Talgonite.ListBoxItem.HoverBackground}"/>
        </Style>
    
        <Style Selector="^:selected /template/ Border#SelectionHighlight">
           <Setter Property="Background" Value="{StaticResource Talgonite.ListBoxItem.SelectedBackground}"/>
        </Style>
    
        <Style Selector="^:disabled /template/ Border#SelectionHighlight">
            <Setter Property="Background" Value="{StaticResource Talgonite.ListBoxItem.DisabledBackground}"/>
        </Style>
    </Style>
    
    <!-- Bubble ListBoxItem Style -->
    <Style Selector="ListBox.bubble ListBoxItem">
        <Setter Property="Background" Value="{StaticResource Talgonite.ListBoxItem.Background}"/>
        <Setter Property="Foreground" Value="{StaticResource Talgonite.ListBoxItem.Foreground}"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Margin" Value="0,0,0,4"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="Template">
            <ControlTemplate>
                <ContentPresenter Name="PART_ContentPresenter"
                                  Classes="bubble"
                                  Content="{TemplateBinding Content}"
                                  ContentTemplate="{TemplateBinding ContentTemplate}"
                                  Background="{TemplateBinding Background}"
                                  BorderBrush="{TemplateBinding BorderBrush}"
                                  BorderThickness="{TemplateBinding BorderThickness}"
                                  CornerRadius="{TemplateBinding CornerRadius}"
                                  HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                  VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                  Padding="{TemplateBinding Padding}"/>
            </ControlTemplate>
        </Setter>
        
        <Style Selector="^:focus-visible /template/ ContentPresenter.bubble">
            <Setter Property="Foreground" Value="{StaticResource Talgonite.ListBoxItem.FocusForeground}"/>
        </Style>
    
        <Style Selector="^:pointerover /template/ ContentPresenter.bubble">
            <Setter Property="Background" Value="{StaticResource Talgonite.ListBoxItem.HoverBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource Talgonite.ListBoxItem.HoverForeground}"/>
        </Style>
    
        <Style Selector="^:selected /template/ ContentPresenter.bubble">
            <Setter Property="Background" Value="{StaticResource Talgonite.ListBoxItem.SelectedBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource Talgonite.ListBoxItem.SelectedForeground}"/>
        </Style>
    
        <Style Selector="^:disabled /template/ ContentPresenter.bubble">
            <Setter Property="Background" Value="{StaticResource Talgonite.ListBoxItem.DisabledBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource Talgonite.ListBoxItem.DisabledForeground}"/>
        </Style>
    </Style>
    
</Styles>