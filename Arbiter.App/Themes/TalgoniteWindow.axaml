<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:Arbiter.App.Controls"
        xmlns:converters="using:Arbiter.App.Converters">
    <Style Selector="controls|TalgoniteWindow">
        <Setter Property="Background" Value="{StaticResource Talgonite.Window.Background}"/>
        <Setter Property="Foreground" Value="{StaticResource Talgonite.Window.Foreground}"/>
        <Setter Property="FontFamily" Value="{StaticResource Talgonite.Font.InterfaceFont}"/>
        <Setter Property="FontSize" Value="{StaticResource Talgonite.FontSize.Normal}"/>
        <Setter Property="SystemDecorations" Value="None"/>
        <Setter Property="ExtendClientAreaToDecorationsHint" Value="True"/>
        <Setter Property="ExtendClientAreaChromeHints" Value="NoChrome"/>
        <Setter Property="ExtendClientAreaTitleBarHeightHint" Value="40"/>
        <Setter Property="Template">
            <ControlTemplate>
                <Border Background="{TemplateBinding Background}" Padding="0">
                    <VisualLayerManager>
                        <Grid RowDefinitions="40,*" Background="Transparent">
                            <!-- Title Bar Area -->
                            <Grid Name="PART_TitleBar"
                                  Grid.Row="0" ColumnDefinitions="Auto,*,Auto,Auto,Auto,Auto"
                                  Background="Transparent"
                                  Margin="12,0,0,0">
                                <!-- Icon --> 
                                <Image Grid.Column="0"
                                       Source="{TemplateBinding Icon, Converter={x:Static converters:IconImageConverter.Converter}}"
                                       Width="24" Height="24"
                                       Stretch="UniformToFill"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       IsVisible="{TemplateBinding Icon, Converter={x:Static ObjectConverters.IsNotNull}}"/>
                                
                                <!-- Title -->
                                <TextBlock Grid.Column="1"
                                           Text="{TemplateBinding Title}"
                                           FontSize="{StaticResource Talgonite.Window.TitleFontSize}"
                                           FontWeight="DemiBold"
                                           TextAlignment="{TemplateBinding TitleAlignment}"
                                           HorizontalAlignment="Stretch"
                                           VerticalAlignment="Center"
                                           Margin="8,0,0,0"/>
                                
                                <!-- Custom Content Area -->
                                <ContentControl Grid.Column="2"
                                                Content="{TemplateBinding TitleBarContent}"
                                                HorizontalAlignment="Stretch"
                                                VerticalAlignment="Center"
                                                Margin="8,0"/>
                                
                                <!-- Minimize Button -->
                                <Button Name="PART_MinimizeButton"
                                        Grid.Column="3" Classes="controlBox"
                                        IsVisible="{TemplateBinding CanResize}">
                                    <Path
                                        Width="16"
                                        Height="16"
                                        Stroke="{Binding $parent[Button].Foreground}"
                                        StrokeThickness="2"
                                        StrokeLineCap="Round"
                                        Stretch="None"
                                        Data="M2 14 H14" />
                                </Button>
                                
                                <!-- Maximize/Restore Button -->
                                <Button Name="PART_MaximizeButton"
                                        Grid.Column="4" Classes="controlBox"
                                        IsVisible="{TemplateBinding CanResize}">
                                    <Path
                                        Width="16"
                                        Height="16"
                                        Stroke="{Binding $parent[Button].Foreground}"
                                        StrokeThickness="2"
                                        StrokeJoin="Round"
                                        Stretch="None"
                                        Data="M2 2 H14 V14 H2 Z" />
                                </Button>
                                
                                <!-- Close Button -->
                                <Button Name="PART_CloseButton"
                                        Grid.Column="5" Classes="controlBox">
                                    <Path
                                        Height="16"
                                        Width="16"
                                        Stroke="{Binding $parent[Button].Foreground}"
                                        StrokeThickness="2"
                                        StrokeLineCap="Round"
                                        Stretch="None"
                                        Data="M2 2 L14 14 M14 2 L2 14"/>
                                </Button>
                            </Grid>
                            
                            <!-- Content Area -->
                            <DockPanel Grid.Row="1" LastChildFill="True">
                                <ContentPresenter Name="PART_ContentPresenter"
                                                  DockPanel.Dock="Bottom"
                                                  Content="{TemplateBinding Content}"
                                                  Margin="0"
                                                  HorizontalAlignment="Stretch"
                                                  VerticalAlignment="Stretch"
                                                  HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                  VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"/>
                            </DockPanel>
                           
                            <!-- Resize Grip -->
                            <Grid Name="PART_ResizeGrip"
                                  Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                  Classes="resizeGripContainer"
                                  IsVisible="{Binding $parent[Window].CanResize}"
                                  Cursor="BottomRightCorner">
                                <Path Width="16" Height="16"
                                      Classes="resizeGrip"
                                      Margin="0,0,4,4"
                                      Data="M2 14 L14 2 M7 14 L14 7 M12 14 L14 12"/>
                            </Grid>
                        </Grid>
                        
                    </VisualLayerManager>
                </Border>
            </ControlTemplate>
        </Setter>
    </Style>
    
    <Style Selector="controls|TalgoniteWindow /template/ Button.controlBox">
        <Setter Property="Foreground" Value="#ffffff"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Opacity" Value="0.5"/>
        <Setter Property="MinWidth" Value="40"/>
        <Setter Property="MinHeight" Value="32"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalContentAlignment" Value="{TemplateBinding HorizontalContentAlignment}"/>
        <Setter Property="VerticalContentAlignment" Value="{TemplateBinding VerticalContentAlignment}"/>
    </Style>
    
    <Style Selector="controls|TalgoniteWindow:dragging">
        <Setter Property="Cursor" Value="Hand"/>
    </Style>
    
    <Style Selector="controls|TalgoniteWindow /template/ Button.controlBox:pointerover">
        <Setter Property="Opacity" Value="1"/>
        <Setter Property="Background" Value="#262b33"/>
    </Style>
    
    <Style Selector="controls|TalgoniteWindow /template/ Button.controlBox:pressed">
        <Setter Property="Opacity" Value="1"/>
        <Setter Property="Background" Value="#373d49"/>
    </Style>
    
    <Style Selector="controls|TalgoniteWindow /template/ Button#PART_CloseButton:pointerover">
        <Setter Property="Opacity" Value="1"/>
        <Setter Property="Foreground" Value="#ed6a5e"/>
    </Style>
    
    <Style Selector="controls|TalgoniteWindow /template/ Button#PART_CloseButton:pressed">
        <Setter Property="Opacity" Value="1"/>
        <Setter Property="Background" Value="#ed5547"/>
        <Setter Property="Foreground" Value="#ffffff"/>
    </Style>
</Styles>
