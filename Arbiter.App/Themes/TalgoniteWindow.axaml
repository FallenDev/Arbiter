<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:Arbiter.App.Controls"
        xmlns:converters="using:Arbiter.App.Converters">
    <Style Selector="controls|TalgoniteWindow">
        <Setter Property="Background" Value="{StaticResource Talgonite.Window.Background}"/>
        <Setter Property="Foreground" Value="{StaticResource Talgonite.Window.Foreground}"/>
        <Setter Property="TitleBarBorderBrush" Value="{StaticResource Talgonite.Window.TitleBorderBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource Talgonite.Font.InterfaceFont}"/>
        <Setter Property="FontSize" Value="{StaticResource Talgonite.FontSize.Normal}"/>
        <Setter Property="SystemDecorations" Value="None"/>
        <Setter Property="ExtendClientAreaToDecorationsHint" Value="True"/>
        <Setter Property="ExtendClientAreaChromeHints" Value="NoChrome"/>
        <Setter Property="ExtendClientAreaTitleBarHeightHint" Value="40"/>
        <Setter Property="Template">
            <ControlTemplate>
                <Border Background="{TemplateBinding Background}" Padding="0">
                    <VisualLayerManager>
                        <Grid RowDefinitions="40,*" Background="Transparent">
                            <!-- Title Bar Area -->
                            <Border Grid.Row="0"
                                    Background="Transparent"
                                    BorderBrush="{TemplateBinding TitleBarBorderBrush}"
                                    BorderThickness="{TemplateBinding TitleBarBorderThickness}">
                                <Grid Name="PART_TitleBar"
                                      ColumnDefinitions="Auto,*,Auto,Auto,Auto,Auto"
                                      Background="Transparent"
                                      Margin="12,0,0,0">
                                    <!-- Icon --> 
                                    <Image Grid.Column="0"
                                           Source="{TemplateBinding Icon, Converter={x:Static converters:IconImageConverter.Converter}}"
                                           Width="24" Height="24"
                                           Stretch="UniformToFill"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           IsVisible="{TemplateBinding Icon, Converter={x:Static ObjectConverters.IsNotNull}}"/>
                                    
                                    <!-- Title -->
                                    <TextBlock Name="TitleTextBlock"
                                               Grid.Column="1"
                                               Text="{TemplateBinding Title}"
                                               FontSize="{StaticResource Talgonite.Window.TitleFontSize}"
                                               FontWeight="DemiBold"
                                               TextAlignment="{TemplateBinding TitleAlignment}"
                                               HorizontalAlignment="Stretch"
                                               VerticalAlignment="Center"
                                               Margin="8,0,0,0"/>
                                    
                                    <!-- Custom Content Area -->
                                    <ContentControl Name="PART_TitleContent"
                                                    Grid.Column="2"
                                                    Content="{TemplateBinding TitleBarContent}"
                                                    HorizontalAlignment="Stretch"
                                                    VerticalAlignment="Center"
                                                    Margin="8,0"/>
                                    
                                    <!-- Minimize Button -->
                                    <Button Name="PART_MinimizeButton"
                                            Grid.Column="3" Classes="control-box"
                                            IsVisible="{TemplateBinding CanResize}">
                                        <Path
                                            Width="16"
                                            Height="16"
                                            Stroke="{Binding $parent[Button].Foreground}"
                                            Data="{StaticResource Talgonite.Icon.WindowMinimize}" />
                                    </Button>
                                    
                                    <!-- Maximize/Restore Button -->
                                    <Button Name="PART_MaximizeButton"
                                            Grid.Column="4" Classes="control-box"
                                            IsVisible="{TemplateBinding CanResize}">
                                        <Path
                                            Width="16"
                                            Height="16"
                                            Stroke="{Binding $parent[Button].Foreground}"
                                            Data="{StaticResource Talgonite.Icon.WindowMaximize}" />
                                    </Button>
                                    
                                    <!-- Close Button -->
                                    <Button Name="PART_CloseButton"
                                            Grid.Column="5" Classes="control-box">
                                        <Path
                                            Height="16"
                                            Width="16"
                                            Stroke="{Binding $parent[Button].Foreground}"
                                            Data="{StaticResource Talgonite.Icon.WindowClose}"/>
                                    </Button>
                                </Grid>
                            </Border>
                            
                            <!-- Content Area -->
                            <DockPanel Grid.Row="1" LastChildFill="True">
                                <ContentPresenter Name="PART_ContentPresenter"
                                                  DockPanel.Dock="Bottom"
                                                  Content="{TemplateBinding Content}"
                                                  Margin="0"
                                                  HorizontalAlignment="Stretch"
                                                  VerticalAlignment="Stretch"
                                                  HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                  VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"/>
                            </DockPanel>
                           
                            <!-- Resize Grip -->
                            <Panel Name="PART_ResizeGrip"
                                  Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                  Classes="resize-grip-container"
                                  IsVisible="{Binding $parent[Window].CanResize}"
                                  Cursor="BottomRightCorner">
                                <Path Width="16" Height="16"
                                      Classes="resize-grip"
                                      Margin="0,0,4,4"
                                      Data="M2 14 L14 2 M7 14 L14 7 M12 14 L14 12"/>
                            </Panel>
                        </Grid>
                        
                    </VisualLayerManager>
                </Border>
            </ControlTemplate>
        </Setter>
    </Style>
    
    <Style Selector="controls|TalgoniteWindow:dragging">
        <Setter Property="Cursor" Value="Hand"/>
    </Style>
    
    <Style Selector="controls|TalgoniteWindow[TitleAlignment=Center] /template/ TextBlock#TitleTextBlock">
        <Setter Property="Grid.Column" Value="0"/>
        <Setter Property="Grid.ColumnSpan" Value="6"/>
        <Setter Property="Margin" Value="8,0"/>
    </Style>
    
    <Style Selector="controls|TalgoniteWindow /template/ Button.control-box">
        <Setter Property="Background" Value="{StaticResource Talgonite.ControlBox.Background}"/>
        <Setter Property="Foreground" Value="{StaticResource Talgonite.ControlBox.Foreground}"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="0"/>
        <Setter Property="MinWidth" Value="40"/>
        <Setter Property="MinHeight" Value="32"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalContentAlignment" Value="{TemplateBinding HorizontalContentAlignment}"/>
        <Setter Property="VerticalContentAlignment" Value="{TemplateBinding VerticalContentAlignment}"/>
        <Setter Property="IsTabStop" Value="False"/>
    </Style>
    
    <Style Selector="controls|TalgoniteWindow /template/ Button.control-box:pointerover">
        <Setter Property="Background" Value="{StaticResource Talgonite.ControlBox.HoverBackground}"/>
        <Setter Property="Foreground" Value="{StaticResource Talgonite.ControlBox.HoverForeground}"/>
    </Style>
    
    <Style Selector="controls|TalgoniteWindow /template/ Button.control-box:pressed">
        <Setter Property="Background" Value="{StaticResource Talgonite.ControlBox.PressedBackground}"/>
        <Setter Property="Foreground" Value="{StaticResource Talgonite.ControlBox.PressedForeground}"/>
    </Style>
    
    <Style Selector="controls|TalgoniteWindow /template/ Button#PART_CloseButton:pointerover">
        <Setter Property="Background" Value="{StaticResource Talgonite.DestructiveButton.HoverBackground}"/>
        <Setter Property="Foreground" Value="{StaticResource Talgonite.DestructiveButton.HoverForeground}"/>
    </Style>
    
    <Style Selector="controls|TalgoniteWindow /template/ Button#PART_CloseButton:pressed">
        <Setter Property="Background" Value="{StaticResource Talgonite.DestructiveButton.PressedBackground}"/>
        <Setter Property="Foreground" Value="{StaticResource Talgonite.DestructiveButton.PressedForeground}"/>
    </Style>
</Styles>
