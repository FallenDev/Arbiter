<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="using:Arbiter.App.ViewModels"
                    xmlns:converters="using:Arbiter.App.Converters">
    <SolidColorBrush x:Key="Talgonite.TracePacket.TimestampForeground" Color="#717479"/>
    <SolidColorBrush x:Key="Talgonite.TracePacket.ClientNameForeground" Color="#e0e0e0"/>
    
    <Geometry x:Key="Talgonite.TracePacket.LeftCaret">M 6,1 L 2,4 L 6,7 Z</Geometry>
    <Geometry x:Key="Talgonite.TracePacket.RightCaret">M 2,1 L 6,4 L 2,7 Z</Geometry>
    
    <Geometry x:Key="Talgonite.TracePacket.LeftArrow">M11,4 H4 M4,1 L1,4 L4,7</Geometry>
    <Geometry x:Key="Talgonite.TracePacket.RightArrow">M1,4 H8 M8,1 L11,4 L8,7</Geometry>
    
    <DataTemplate x:Key="TracePacketTemplate" DataType="vm:TracePacketViewModel">
        <Border Background="Transparent"
                BorderBrush="{StaticResource Talgonite.Window.TitleBorderBrush}"
                BorderThickness="0,0,0,1"
                Padding="4,2"
                Cursor="Hand">
            <Grid ColumnDefinitions="Auto,Auto,Auto" ColumnSpacing="4">
                <!-- Timestamp and Client Name -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8">
                    <TextBlock Name="TimestampText"
                               Text="{Binding Timestamp, StringFormat={}{0:HH:mm:ss}}"
                               Foreground="{StaticResource Talgonite.TracePacket.TimestampForeground}"/>
                    
                    <!-- Client Name -->
                    <TextBlock Text="{Binding ClientName}"
                               Foreground="{StaticResource Talgonite.TracePacket.ClientNameForeground}"
                               IsVisible="{Binding ClientName, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                </StackPanel>
                
                <!-- Direction Arrow and Command Name -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="4">
                    <Path Width="12" Height="8"
                          Stroke="{Binding #CommandNameText.Foreground}"
                          Fill="{Binding #CommandNameText.Foreground}"
                          Data="{StaticResource Talgonite.TracePacket.RightArrow}"
                          IsVisible="{Binding IsClient}"/>
                    <Path Width="12" Height="8"
                          Stroke="{Binding #CommandNameText.Foreground}"
                          Fill="{Binding #CommandNameText.Foreground}"
                          Data="{StaticResource Talgonite.TracePacket.LeftArrow}"
                          IsVisible="{Binding IsServer}"/>
                    
                    <!-- Command Display Name -->
                    <TextBlock Name="CommandNameText"
                               Text="{Binding CommandName}"
                               TextAlignment="Left"
                               Foreground="{Binding Packet, Converter={x:Static converters:PacketDirectionColorConverter.Converter}}"
                               FontWeight="SemiBold"/>
                </StackPanel>
                
                <!-- Payload Display -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8">
                    <TextBlock Name="CommandText"
                               Text="{Binding Packet.Command, StringFormat={}{0:X2}}"
                               Foreground="{Binding #CommandNameText.Foreground}"/>
                    
                    <TextBlock Name="PayloadText"
                               Text="{Binding DisplayValue}"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </Grid>
            
            <Border.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Copy" Command="{Binding CopyToClipboardCommand}" InputGesture="Ctrl+C" HotKey="Ctrl+C"/>
                </ContextMenu>
            </Border.ContextMenu>
        </Border>
    </DataTemplate>
</ResourceDictionary>
