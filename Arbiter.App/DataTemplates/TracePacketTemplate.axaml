<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="using:Arbiter.App.ViewModels"
                    xmlns:converters="using:Arbiter.App.Converters">
    <DataTemplate x:Key="TracePacketTemplate" DataType="vm:TracePacketViewModel">
        <Border Background="Transparent"
                BorderBrush="{StaticResource Talgonite.Window.TitleBorderBrush}"
                BorderThickness="0,0,0,1"
                Padding="4,2">
            <Grid ColumnDefinitions="Auto,Auto,*" ColumnSpacing="8">
                <!-- Timestamp -->
                <TextBlock Name="TimestampText"
                           Grid.Column="0"
                           Text="{Binding Timestamp, StringFormat={}{0:HH:mm:ss}}"
                           Foreground="{StaticResource Talgonite.TextBlock.DimForeground}"/>
                
                <!-- Client/Server Direction -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="4">
                    <TextBlock Name="DirectionText"
                               Text="{Binding Packet, Converter={x:Static converters:PacketDirectionNameConverter.Converter}}"
                               TextAlignment="Left"
                               Foreground="{Binding Packet, Converter={x:Static converters:PacketDirectionColorConverter.Converter}}"
                               FontWeight="SemiBold"/>
                    <Path Width="8" Height="8"
                          Stretch="None"
                          Stroke="{Binding #DirectionText.Foreground}"
                          Fill="{Binding #DirectionText.Foreground}"
                          StrokeThickness="2"
                          StrokeLineCap="Round"
                          StrokeJoin="Round"
                          Data="M 2,1 L 6,4 L 2,7 Z"/>
                </StackPanel>
                
                <!-- Payload Display -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8">
                    <TextBlock Name="CommandText"
                               Text="{Binding Packet.Command, StringFormat={}{0:X2}}"
                               Foreground="{Binding #DirectionText.Foreground}"
                               TextWrapping="WrapWithOverflow"/>
                    
                    <SelectableTextBlock Name="PayloadText"
                               Text="{Binding DisplayValue}"
                               TextWrapping="WrapWithOverflow"/>
                </StackPanel>
            </Grid>
        </Border>
    </DataTemplate>
</ResourceDictionary>
