<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="using:Arbiter.App.Converters"
             x:Class="Arbiter.App.App"
             xmlns:local="using:Arbiter.App"
             RequestedThemeVariant="Default">

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
             
    <Application.Styles>
        <StyleInclude Source="/Themes/TalgoniteStyles.axaml"/>
    </Application.Styles>
    
    <Application.Resources>
        <ResourceDictionary>
            <!-- Converters -->
            <converters:LogLevelBrushConverter x:Key="LogLevelBrushConverter"/>
            <converters:PacketDirectionColorConverter x:Key="PacketDirectionColorConverter"/>
            <converters:PacketDirectionNameConverter x:Key="PacketDirectionNameConverter"/>
            
            <!-- Data Templates -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="/DataTemplates/LogEntryTemplate.axaml"/>
                <ResourceInclude Source="/DataTemplates/TracePacketTemplate.axaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>