<controls:TalgoniteWindow
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="using:Arbiter.App.Controls"
        xmlns:vm="using:Arbiter.App.ViewModels"
        mc:Ignorable="d"
        x:Class="Arbiter.App.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/aiseirigh.ico"
        Title="Arbiter"
        Width="1280" Height="720"
        CanResize="True"
        WindowStartupLocation="CenterScreen">
        <controls:TalgoniteWindow.TitleBarContent>
                <TextBlock Text="Custom content area"
                           Foreground="#72757a"
                           FontSize="14"
                           FontWeight="DemiBold"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"/>
        </controls:TalgoniteWindow.TitleBarContent>
        <Border Background="#262b33">
                <TextBlock Text="The quick brown fox jumps over the lazy dog."
                           FontSize="20"
                           FontWeight="Light"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
        </Border>
</controls:TalgoniteWindow>
