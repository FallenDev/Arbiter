<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:v="using:Arbiter.App.Views"
             xmlns:vm="using:Arbiter.App.ViewModels.Inspector"
             xmlns:converters="using:Arbiter.App.Converters"
             mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="500"
             x:Class="Arbiter.App.Views.InspectorView"
             x:DataType="vm:InspectorViewModel">
    <Design.DataContext>
        <vm:DesignInspectorViewModel/>
    </Design.DataContext>
    
    <UserControl.Resources>
        <SolidColorBrush x:Key="Talgonite.Inspector.ReplaceInfoBrush" Color="#82baf7"/>
    </UserControl.Resources>
    
    <Grid RowDefinitions="Auto,Auto,Auto,*"
          Background="{StaticResource Talgonite.Control.Background}">
        
        <!-- No Selection Placeholder -->
        <TextBlock Grid.Row="3"
                   Text="No packet selected"
                   TextAlignment="Center"
                   Foreground="{StaticResource Talgonite.TextBlock.DimForeground}"
                   FontSize="18"
                   VerticalAlignment="Center"
                   IsVisible="{Binding InspectedPacket, Converter={x:Static ObjectConverters.IsNull}}"/>
        
        <!-- Empty Placeholder -->
        <TextBlock Grid.Row="3"
                   Text="No properties to show"
                   TextAlignment="Center"
                   Foreground="{StaticResource Talgonite.TextBlock.DimForeground}"
                   FontSize="18"
                   VerticalAlignment="Center"
                   IsVisible="{Binding IsEmpty}"/>
        
        <!-- Header Section -->
        <Grid Row="0" ColumnDefinitions="*,Auto"
              IsVisible="{Binding InspectedPacket, Converter={x:Static ObjectConverters.IsNotNull}}">
            <StackPanel Grid.Column="0" Margin="0,4">
                <TextBlock Text="{Binding InspectedPacket.DisplayName, FallbackValue=--}"
                           TextAlignment="Left"
                           FontFamily="{StaticResource Talgonite.Font.Monospace}"
                           FontSize="24"
                           FontWeight="SemiBold"
                           Foreground="#e0e0e0"
                           Margin="8,4,8,0"
                           VerticalAlignment="Center"/>
                
                <Grid ColumnDefinitions="*,Auto">
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="8,0" Spacing="8">
                        <TextBlock Name="DirectionText"
                                   Text="{Binding InspectedPacket.Direction, FallbackValue=Unknown, StringFormat={}{0} Packet}"
                                   FontFamily="{StaticResource Talgonite.Font.Monospace}"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{Binding InspectedPacket.Direction, Converter={x:Static converters:PacketDirectionColorConverter.Converter}, FallbackValue=White}"
                                   VerticalAlignment="Center"/>
                    
                        <TextBlock Text="{Binding InspectedPacket.Command, FallbackValue=00, StringFormat={}0x{0:X2}}"
                                   FontFamily="{StaticResource Talgonite.Font.Monospace}"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{Binding #DirectionText.Foreground}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
            
            <!-- Toolbar Buttons -->
            <WrapPanel Grid.Column="1" Orientation="Horizontal" ItemSpacing="8" Margin="8" VerticalAlignment="Center">
                <Button Command="{Binding CopyToClipboardCommand}"
                        ToolTip.Tip="Copy the JSON representation of this object."
                        Classes="toolbar"
                        FontSize="18"
                        FontFamily="{StaticResource Talgonite.Font.Monospace}"
                        FontWeight="SemiBold"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center">
                    {}
                </Button>
            </WrapPanel>
        </Grid>
        
        <!-- Blocked Packet Indicator -->
        <Border Grid.Row="1" Background="{StaticResource Talgonite.CheckBox.Background}"
                BorderBrush="{StaticResource Talgonite.Border.DividerBrush}"
                BorderThickness="2"
                CornerRadius="4"
                Margin="8,4"
                Padding="16,8"
                IsVisible="{Binding SelectedPacket.WasBlocked, FallbackValue={x:False}}">
            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="16">
                <Path Grid.Column="0" Width="16" Height="16"
                      VerticalAlignment="Center"
                      Stroke="{Binding #BlockedInfoTextBlock.Foreground}"
                      Data="{StaticResource Talgonite.Icon.CrossX}"/>
                <TextBlock Grid.Column="1" Name="BlockedInfoTextBlock"
                           Text="This packet was blocked by a filter."
                           TextWrapping="Wrap"
                           TextTrimming="CharacterEllipsis"
                           FontSize="16"
                           Foreground="{StaticResource Talgonite.TextBlock.DimForeground}"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>
        
        <!-- Replaced Packet Indicator -->
        <Border Grid.Row="1" Background="{StaticResource Talgonite.CheckBox.Background}"
                BorderBrush="{StaticResource Talgonite.Border.DividerBrush}"
                BorderThickness="2"
                CornerRadius="4"
                Margin="8,4"
                Padding="16,8"
                IsVisible="{Binding SelectedPacket.WasReplaced, FallbackValue={x:False}}">
            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="16">
                <Path Grid.Column="0" Width="16" Height="16"
                      VerticalAlignment="Center"
                      Stroke="{Binding #ReplacedInfoTextBlock.Foreground}"
                      Data="{StaticResource Talgonite.Icon.RefreshArrows}"/>
                <TextBlock Grid.Column="1" Name="ReplacedInfoTextBlock"
                           Text="This packet was replaced by a filter."
                           TextWrapping="Wrap"
                           TextTrimming="CharacterEllipsis"
                           FontSize="16"
                           Foreground="{StaticResource Talgonite.Inspector.ReplaceInfoBrush}"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>
        
        <Border Grid.Row="2" Classes="divider-h" Margin="0,4"
                IsVisible="{Binding InspectedPacket, Converter={x:Static ObjectConverters.IsNotNull}}"/>
        
        <Grid Grid.Row="3" RowDefinitions="Auto,*"
              IsVisible="{Binding !HasError}">
            <!-- Filtered / Original Toggle -->
            <StackPanel Grid.Row="0" Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Margin="8,4"
                        IsVisible="{Binding SelectedPacket.WasReplaced, FallbackValue={x:False}}">
                <RadioButton Classes="segment segment-left"
                             IsChecked="{Binding UseFiltered}">
                    <TextBlock Text="Filtered"
                               FontSize="16"
                               VerticalAlignment="Center"/>
                </RadioButton>
                <RadioButton Classes="segment segment-right"
                             IsChecked="{Binding !UseFiltered}">
                    <TextBlock Text="Original"
                               FontSize="16"
                               VerticalAlignment="Center"/>
                </RadioButton>
            </StackPanel>
            
            <!-- Sections -->
            <ScrollViewer Grid.Row="1"
                          HorizontalScrollBarVisibility="Disabled"
                          VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding InspectedPacket.Sections, FallbackValue={x:Null}}">
                    <ItemsControl.DataTemplates>
                        <DataTemplate DataType="vm:InspectorSectionViewModel">
                            <v:InspectorSectionView/>
                        </DataTemplate>
                    </ItemsControl.DataTemplates>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
        
        <!-- Exception -->
        <ScrollViewer Grid.Row="3"
                      HorizontalScrollBarVisibility="Disabled"
                      VerticalScrollBarVisibility="Auto"
                      IsVisible="{Binding HasError}">
            <v:InspectorExceptionView DataContext="{Binding InspectorException, FallbackValue={x:Null}}"/>
        </ScrollViewer>
    </Grid>
</UserControl>
