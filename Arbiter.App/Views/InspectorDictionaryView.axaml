<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Arbiter.App.ViewModels.Inspector"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Arbiter.App.Views.InspectorDictionaryView"
             x:DataType="vm:InspectorDictionaryViewModel">
    <Expander Header="{Binding Name}"
              IsExpanded="{Binding IsExpanded}"
              Margin="4"
              Padding="4,8">
        <!-- Header Template -->
        <Expander.HeaderTemplate>
            <DataTemplate>
                <Grid ColumnDefinitions="Auto, *">
                    <TextBlock Grid.Column="0"
                               Text="{Binding $parent[Expander].Header}"
                               TextAlignment="Left"
                               VerticalAlignment="Center"
                               FontWeight="SemiBold"
                               Margin="8,4"/>
                    
                    <TextBlock Grid.Column="1"
                               Text="{Binding $parent[UserControl].((vm:InspectorDictionaryViewModel)DataContext).TypeName, FallbackValue={}}"
                               TextAlignment="Right"
                               Foreground="{StaticResource Talgonite.TextBlock.DimForeground}"
                               VerticalAlignment="Center"
                               FontWeight="SemiBold"
                               Margin="8,4"/>
                </Grid>
            </DataTemplate>
        </Expander.HeaderTemplate>
        
        <ItemsControl ItemsSource="{Binding Values}"/>
    </Expander>
</UserControl>
