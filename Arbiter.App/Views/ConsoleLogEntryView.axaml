<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Arbiter.App.ViewModels.Logging"
             xmlns:converters="using:Arbiter.App.Converters"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Arbiter.App.Views.ConsoleLogEntryView"
             x:DataType="vm:LogEntryViewModel">
    <UserControl.Resources>
        <SolidColorBrush x:Key="Talgonite.Console.ErrorSelectionBrush" Color="#80ed6a5e"/>
    </UserControl.Resources>
    
    <Border Background="Transparent"
            BorderBrush="{StaticResource Talgonite.Window.TitleBorderBrush}"
            BorderThickness="0,0,0,1"
            Padding="4,2">
            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="8">
                <!-- Timestamp -->
                <TextBlock Name="TimestampText"
                           Grid.Column="0"
                           Text="{Binding Timestamp, StringFormat={}{0:HH:mm:ss}}"
                           Foreground="{StaticResource Talgonite.TextBlock.DimForeground}"/>
                
                <!-- Message and Stack Trace -->
                <StackPanel Grid.Column="1">
                    <SelectableTextBlock Name="MessageText"
                               Text="{Binding FormattedMessage}"
                               TextWrapping="WrapWithOverflow"
                               Foreground="{Binding Path=Level, Converter={x:Static converters:LogLevelBrushConverter.Converter}}"/>

                    <SelectableTextBlock Name="ExceptionText"
                                         Text="{Binding FormattedException}"
                                         TextWrapping="WrapWithOverflow"
                                         Foreground="{Binding #MessageText.Foreground}"
                                         SelectionBrush="{StaticResource Talgonite.Console.ErrorSelectionBrush}"
                                         IsVisible="{Binding FormattedException, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                
                    <SelectableTextBlock Name="StackTraceText"
                                         Text="{Binding FormattedStackTrace}"
                                         TextWrapping="WrapWithOverflow"
                                         Foreground="{Binding #ExceptionText.Foreground}"
                                         SelectionBrush="{StaticResource Talgonite.Console.ErrorSelectionBrush}"
                                         IsVisible="{Binding FormattedStackTrace, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                </StackPanel>
            </Grid>
        </Border>
</UserControl>
