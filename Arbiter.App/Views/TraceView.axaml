<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:c="using:Arbiter.App.Controls"
             xmlns:converters="using:Arbiter.App.Converters"
             xmlns:v="using:Arbiter.App.Views"
             xmlns:vm="using:Arbiter.App.ViewModels.Tracing"
             xmlns:behaviors="using:Arbiter.App.Behaviors"
             mc:Ignorable="d" d:DesignWidth="660" d:DesignHeight="450"
             x:Class="Arbiter.App.Views.TraceView"
             x:DataType="vm:TraceViewModel">

    <UserControl.Resources>
        <SolidColorBrush x:Key="Talgonite.Trace.Background" Color="#373d49" />
    </UserControl.Resources>

    <Grid RowDefinitions="Auto,Auto,Auto,*" Background="{StaticResource Talgonite.Trace.Background}">
        <!-- Toolbar Area -->
        <Border Grid.Row="0" Padding="4">
            <Grid ColumnDefinitions="Auto,*,Auto">
                <!-- Left Side Buttons -->
                <WrapPanel Grid.Column="0" Orientation="Horizontal" ItemSpacing="4">
                    <!-- Start Trace Button -->
                    <Button Command="{Binding StartTracingCommand}"
                            HotKey="F5"
                            ToolTip.Tip="Starts a new packet trace."
                            Classes="toolbar"
                            IsEnabled="{Binding IsRunning, Converter={x:Static BoolConverters.Not}}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Path Width="16" Height="16"
                                  Stroke="{Binding $parent[Button].Foreground}"
                                  Data="{StaticResource Talgonite.Icon.StartPlay}" />
                        </StackPanel>
                    </Button>
                    <!-- Stop Trace Button -->
                    <Button Command="{Binding StopTracingCommand}"
                            HotKey="F6"
                            ToolTip.Tip="Stops the current packet trace."
                            Classes="toolbar"
                            IsEnabled="{Binding IsRunning}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Path Width="16" Height="16"
                                  Stroke="{Binding $parent[Button].Foreground}"
                                  Data="{StaticResource Talgonite.Icon.StopPlay}" />
                        </StackPanel>
                    </Button>
                </WrapPanel>

                <!-- Center Buttons -->
                <WrapPanel Grid.Column="1" Orientation="Horizontal" ItemSpacing="4" ItemsAlignment="Center">
                    <!-- Display Mode -->
                    <StackPanel Orientation="Horizontal">
                        <!-- Decrypted Display -->
                        <RadioButton IsChecked="{Binding ShowRawPackets, Converter={x:Static BoolConverters.Not}}"
                                     GroupName="DisplayMode"
                                     ToolTip.Tip="Shows the decrypted payload of packets."
                                     Classes="segment segment-left">
                            <StackPanel Orientation="Horizontal" Spacing="4">
                                <Canvas Width="16" Height="16" ClipToBounds="True">
                                    <Path Width="16" Height="16"
                                          Stroke="{Binding $parent[RadioButton].Foreground}"
                                          Data="{StaticResource Talgonite.Icon.RevealEye}" />
                                </Canvas>
                                <TextBlock Text="Decrypted" />
                            </StackPanel>
                        </RadioButton>
                        <!-- Encrypted (Raw) Display -->
                        <RadioButton IsChecked="{Binding ShowRawPackets}"
                                     GroupName="DisplayMode"
                                     ToolTip.Tip="Shows the full encrypted packets."
                                     Classes="segment segment-right">
                            <StackPanel Orientation="Horizontal" Spacing="4">
                                <Path Width="16" Height="16"
                                      Stroke="{Binding $parent[RadioButton].Foreground}"
                                      Data="{StaticResource Talgonite.Icon.SecureLock}" />
                                <TextBlock Text="Encrypted" />
                            </StackPanel>
                        </RadioButton>
                    </StackPanel>
                </WrapPanel>

                <!-- Right Side Buttons -->
                <WrapPanel Grid.Column="2" Orientation="Horizontal" ItemSpacing="4" ItemsAlignment="End">
                    <!-- Toggle Find Button -->
                    <ToggleButton IsChecked="{Binding ShowSearchBar}"
                                  HotKey="Ctrl+F"
                                  ToolTip.Tip="Shows or hides the search bar."
                                  Classes="outline">
                        <Path Width="16" Height="16"
                              Stroke="{Binding $parent[Button].Foreground}"
                              Data="{StaticResource Talgonite.Icon.SearchMagnify}" />
                    </ToggleButton>

                    <!-- Toggle Filter Button -->
                    <ToggleButton IsChecked="{Binding ShowFilterBar}"
                                  HotKey="Ctrl+G"
                                  ToolTip.Tip="Shows or hides the trace filters."
                                  Classes="outline">
                        <Path Width="16" Height="16"
                              Stroke="{Binding $parent[Button].Foreground}"
                              Data="{StaticResource Talgonite.Icon.FilterFunnel}" />
                    </ToggleButton>
                    
                    <!-- Load Trace Button -->
                    <Button Command="{Binding LoadTraceCommand}"
                            HotKey="Ctrl+O"
                            Classes="toolbar">
                        <ToolTip.Tip>
                            <TextBlock>
                                <Run>Loads a trace from a file.</Run>
                                <LineBreak />
                                <Run>Hold</Run>
                                <Run Classes="hotkey"> [Shift] </Run>
                                <Run>to append to the current trace.</Run>
                            </TextBlock>
                        </ToolTip.Tip>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Path Width="16" Height="16"
                                  Stroke="{Binding $parent[Button].Foreground}"
                                  Data="{StaticResource Talgonite.Icon.LoadFolder}" />
                        </StackPanel>
                    </Button>
                    
                    <!-- Save Trace Button -->
                    <Button Command="{Binding SaveAllCommand}"
                            ToolTip.Tip="Saves this trace to a file."
                            HotKey="Ctrl+S"
                            Classes="toolbar"
                            IsEnabled="{Binding IsEmpty, Converter={x:Static BoolConverters.Not}}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Path Width="16" Height="16"
                                  Stroke="{Binding $parent[Button].Foreground}"
                                  Data="{StaticResource Talgonite.Icon.SaveDisk}" />
                        </StackPanel>
                    </Button>
                    
                    <!-- Clear Trace Button -->
                    <Button Command="{Binding ClearTraceCommand}"
                            ToolTip.Tip="Clears all packets from the trace."
                            Classes="toolbar destructive"
                            IsEnabled="{Binding IsEmpty, Converter={x:Static BoolConverters.Not}}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Path Width="16" Height="16"
                                  Stroke="{Binding $parent[Button].Foreground}"
                                  Data="{StaticResource Talgonite.Icon.ClearText}" />
                        </StackPanel>
                    </Button>
                    
                    <!-- Scroll to End Button -->
                    <Button Command="{Binding ScrollToEndCommand}"
                            ToolTip.Tip="Scrolls to the end of the trace."
                            Classes="toolbar">
                        <Path Width="16"
                              Height="16"
                              Stroke="{Binding $parent[Button].Foreground}"
                              Data="{StaticResource Talgonite.Icon.ArrowDownEnd}" />
                    </Button>
                </WrapPanel>
            </Grid>
        </Border>

        <!-- Filter Bar -->
        <Border Grid.Row="1" IsVisible="{Binding ShowFilterBar}"
                BorderBrush="{StaticResource Talgonite.Window.TitleBorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="0,4"
                Height="50">
            <WrapPanel ItemSpacing="4" VerticalAlignment="Center">
                <!-- Bar Icon -->
                <Border Padding="12,4"
                        BorderBrush="{StaticResource Talgonite.Border.DividerBrush}"
                        BorderThickness="0,0,1,0">
                    <Path Width="16" Height="16"
                          Stroke="{StaticResource Talgonite.TextBlock.DimForeground}"
                          Data="{StaticResource Talgonite.Icon.FilterFunnel}"/>
                </Border>
                
                <StackPanel Orientation="Horizontal" Spacing="4">
                    <!-- Command Filter -->
                    <Label Content="Command"
                           VerticalAlignment="Center">
                        <ToolTip.Tip>
                            <TextBlock>
                                <Span>
                                    <Run>Allows filtering by client or server commands.</Run>
                                    <LineBreak/>
                                    <Run>You can select a single command with</Run>
                                    <Run Classes="hotkey" BaselineAlignment="Center">[Ctrl+Click]</Run>
                                    <Run>.</Run>
                                </Span>
                            </TextBlock>
                        </ToolTip.Tip>
                    </Label>
                    <c:MultiSelectDropdown ItemsSource="{Binding FilterParameters.Commands}"
                                           FontFamily="{StaticResource Talgonite.Font.Monospace}"
                                           FontSize="16"
                                           MaxDropdownHeight="400"
                                           Width="300">
                        <c:MultiSelectDropdown.ItemTemplate>
                            <DataTemplate DataType="vm:CommandFilterViewModel">
                                <Grid ColumnDefinitions="Auto,*,Auto" HorizontalAlignment="Stretch">
                                    <TextBlock Grid.Column="1" Text="{Binding DisplayName}"
                                               Foreground="{Binding Direction, Converter={x:Static converters:PacketDirectionColorConverter.Converter}}"
                                               FontSize="14"
                                               VerticalAlignment="Center"/>
                                    <Border Grid.Column="2">
                                        <TextBlock Text="{Binding Value, StringFormat={}0x{0:X2}}"
                                                   Foreground="{StaticResource Talgonite.TextBlock.DimForeground}"
                                                   FontSize="14"
                                                   VerticalAlignment="Center"/>
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </c:MultiSelectDropdown.ItemTemplate>
                    </c:MultiSelectDropdown>
                    
                    <!-- Select All Button -->
                    <Button Command="{Binding SelectAllCommandsCommand}"
                            Classes="toolbar"
                            ToolTip.Tip="Enables all packet commands to be displayed."
                            FontSize="14"
                            FontWeight="Bold"
                            Content="ALL"
                            Padding="8,2"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Spacing="4">
                    <!-- Character Filter -->
                    <Label Content="Clients"
                           VerticalAlignment="Center">
                        <ToolTip.Tip>
                            <TextBlock>
                                <Span>
                                    <Run>Allows filtering by client name.</Run>
                                    <LineBreak/>
                                    <Run>You can select a single client name with</Run>
                                    <Run Classes="hotkey" BaselineAlignment="Center">[Ctrl+Click]</Run>
                                    <Run>.</Run>
                                </Span>
                            </TextBlock>
                        </ToolTip.Tip>
                    </Label>
                    <c:MultiSelectDropdown ItemsSource="{Binding FilterParameters.Clients}"
                                           FontFamily="{StaticResource Talgonite.Font.Monospace}"
                                           FontSize="16"
                                           MaxDropdownHeight="400"
                                           Width="140">
                        <c:MultiSelectDropdown.ItemTemplate>
                            <DataTemplate DataType="vm:ClientFilterViewModel">
                                <Grid ColumnDefinitions="Auto,*" HorizontalAlignment="Stretch">
                                    <TextBlock Grid.Column="1" Text="{Binding DisplayName}"
                                               FontSize="14"
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </DataTemplate>
                        </c:MultiSelectDropdown.ItemTemplate>
                    </c:MultiSelectDropdown>
                    
                    <!-- Select All Button -->
                    <Button Command="{Binding SelectAllClientsCommand}"
                            Classes="toolbar"
                            ToolTip.Tip="Enables all client trace data to be displayed."
                            FontSize="14"
                            FontWeight="Bold"
                            Content="ALL"
                            Padding="8,2"/>
                </StackPanel>
            </WrapPanel>
        </Border>
        
         <!-- Search Bar -->
        <Border Grid.Row="2" IsVisible="{Binding ShowSearchBar}"
                BorderBrush="{StaticResource Talgonite.Window.TitleBorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="0,4"
                Height="50">
            <WrapPanel ItemSpacing="4" VerticalAlignment="Center">
                <!-- Bar Icon -->
                <Border Padding="12,4"
                        BorderBrush="{StaticResource Talgonite.Border.DividerBrush}"
                        BorderThickness="0,0,1,0">
                    <Path Width="16" Height="16"
                          Stroke="{StaticResource Talgonite.TextBlock.DimForeground}"
                          Data="{StaticResource Talgonite.Icon.SearchMagnify}"/>
                </Border>
                
                <!-- Command Search -->
                <Label Content="Command"
                       ToolTip.Tip="Searches for packets matching the command hex code."
                       VerticalAlignment="Center" />
                <ComboBox ItemsSource="{Binding SearchParameters.Commands}"
                          SelectedItem="{Binding SearchParameters.SelectedCommand}"
                          IsTextSearchEnabled="True"
                          FontFamily="{StaticResource Talgonite.Font.Monospace}"
                          FontSize="16"
                          MaxDropDownHeight="400"
                          Width="300"
                          HorizontalContentAlignment="Stretch">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <Grid ColumnDefinitions="*,Auto" HorizontalAlignment="Stretch" Margin="8,2">
                                <TextBlock Grid.Column="0"
                                           Text="{Binding DisplayName}"
                                           Foreground="{Binding Direction, Converter={x:Static converters:PacketDirectionColorConverter.Converter}}"
                                           FontSize="14"
                                           VerticalAlignment="Center"/>
                                <Border Grid.Column="1" IsVisible="{Binding Value, Converter={x:Static ObjectConverters.IsNotNull}}">
                                    <TextBlock Text="{Binding Value, StringFormat={}0x{0:X2}}"
                                               Foreground="{StaticResource Talgonite.TextBlock.DimForeground}"
                                               FontSize="14"
                                               VerticalAlignment="Center"/>
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                    <ComboBox.SelectionBoxItemTemplate>
                        <DataTemplate>
                            <Grid ColumnDefinitions="*,Auto" HorizontalAlignment="Stretch">
                                <TextBlock Grid.Column="0"
                                           Text="{Binding DisplayName}"
                                           TextTrimming="CharacterEllipsis"
                                           Foreground="{Binding Direction, Converter={x:Static converters:PacketDirectionColorConverter.Converter}}"
                                           FontSize="16"
                                           VerticalAlignment="Center"/>
                                <Border Grid.Column="1" IsVisible="{Binding Value, Converter={x:Static ObjectConverters.IsNotNull}}">
                                    <TextBlock Text="{Binding Value, StringFormat={}0x{0:X2}}"
                                               Foreground="{StaticResource Talgonite.TextBlock.DimForeground}"
                                               FontSize="16"
                                               VerticalAlignment="Center"/>
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </ComboBox.SelectionBoxItemTemplate>
                </ComboBox>
                
                <StackPanel Orientation="Horizontal" Spacing="4"
                            IsVisible="{Binding ShowSearchResults}"
                            Height="40">
                    
                    <!-- Clear Button -->
                    <Button Command="{Binding SearchParameters.ClearCommand}"
                            Classes="toolbar destructive"
                            ToolTip.Tip="Clears the search criteria.">
                        <Path Width="16" Height="16"
                              Stroke="{Binding $parent[Button].Foreground}"
                              Data="{StaticResource Talgonite.Icon.CrossX}"/>
                    </Button>
                    
                    <!-- Result count -->
                    <TextBlock Text="{Binding FormattedSearchResultsText, FallbackValue=no matches}"
                               TextAlignment="Center"
                               Foreground="{StaticResource Talgonite.TextBlock.Foreground}"
                               FontSize="14"
                               VerticalAlignment="Center"
                               MinWidth="40"
                               Margin="8,0"/>
                    
                    <!-- Navigation Buttons -->
                    <StackPanel Orientation="Horizontal"
                                IsVisible="{Binding HasSearchResults}">
                        <Button Command="{Binding GotoPreviousSearchResultCommand}"
                                HotKey="Ctrl+OemOpenBrackets"
                                Classes="toolbar"
                                ToolTip.Tip="Navigates to the previous matching packet.">
                            <Path Width="16" Height="16"
                                  Stroke="{Binding $parent[Button].Foreground}"
                                  Data="{StaticResource Talgonite.Icon.ArrowUp}"/>
                        </Button>
                        
                        <Button Command="{Binding GotoNextSearchResultCommand}"
                                HotKey="Ctrl+OemCloseBrackets"
                                Classes="toolbar"
                                ToolTip.Tip="Navigates to the next matching packet.">
                            <Path Width="16" Height="16"
                                  Stroke="{Binding $parent[Button].Foreground}"
                                  Data="{StaticResource Talgonite.Icon.ArrowDown}"/>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </WrapPanel>
        </Border>

        <!-- Trace List -->
        <ListBox Name="TraceListBox"
                 Grid.Row="3"
                 ItemsSource="{Binding FilteredPackets}"
                 SelectedItems="{Binding SelectedPackets}"
                 FontFamily="{StaticResource Talgonite.Font.TraceFont}"
                 FontSize="{StaticResource Talgonite.FontSize.Trace}"
                 SelectionMode="Multiple"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 behaviors:ScrollToIndexBehavior.ScrollToIndex="{Binding ScrollToIndexRequested}"
                 behaviors:ScrollToEndBehavior.ScrollToEnd="{Binding ScrollToEndRequested}"
                 behaviors:ScrollToEndBehavior.AutoScrollToEnd="True">
            <ListBox.DataTemplates>
                <DataTemplate DataType="vm:TracePacketViewModel">
                    <v:TracePacketView />
                </DataTemplate>
            </ListBox.DataTemplates>
            <ListBox.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Copy Selected"
                              Command="{Binding CopyToClipboardCommand}"/>
                    <MenuItem Header="Save Selected"
                              Command="{Binding SaveSelectedCommand}"/>
                    <Separator/>
                    <MenuItem Header="Delete Selected"
                              Command="{Binding DeleteSelectedCommand}"/>
                    <Separator/>
                    <MenuItem Header="Find Selected"
                              Command="{Binding FindSelectedCommand}"/>
                    <MenuItem Header="Exclude Selected"
                              Command="{Binding ExcludeSelectedCommand}"/>
                </ContextMenu>
            </ListBox.ContextMenu>
        </ListBox>
    </Grid>
</UserControl>