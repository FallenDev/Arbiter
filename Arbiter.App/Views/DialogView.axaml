<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Arbiter.App.ViewModels.Dialogs"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="Arbiter.App.Views.DialogView"
             x:DataType="vm:DialogViewModel">
    
    <Design.DataContext>
        <vm:DesignDialogViewModel/>
    </Design.DataContext>
    
    <Grid RowDefinitions="Auto,*" RowSpacing="4"
          Background="{StaticResource Talgonite.Control.Background}">
        <!-- Toolbar Area -->
        <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto,*,Auto"
              Margin="4,4,4,0">
            <!-- Left Side -->
            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <Label Content="Client"/>
                <ComboBox Height="40" Width="160" Margin="4,2"/>
            </StackPanel>
            
            <!-- Right Side -->
            <WrapPanel Grid.Column="4" Orientation="Horizontal" ItemSpacing="4" ItemsAlignment="End">
                <!-- Load Dialog Button -->
                <Button Command="{Binding LoadDialogCommand}"
                        HotKey="Ctrl+O"
                        Classes="outline toolbar"
                        ToolTip.Tip="Loads a dialog from a file.">
                    <Path Width="16" Height="16"
                          Stroke="{Binding $parent[Button].Foreground}"
                          Data="{StaticResource Talgonite.Icon.LoadFolder}" />
                </Button>
                <!-- Save Dialog Button -->
                <Button Command="{Binding SaveDialogCommand}"
                        HotKey="Ctrl+S"
                        Classes="outline toolbar"
                        ToolTip.Tip="Saves the current dialog to file.">
                    <Path Width="16" Height="16"
                          Stroke="{Binding $parent[Button].Foreground}"
                          Data="{StaticResource Talgonite.Icon.SaveDisk}" />
                </Button>
            </WrapPanel>
        </Grid>
        
        <!-- Dialog Area -->
        <Grid Grid.Row="1" Background="{StaticResource Talgonite.Window.Background}"
              Margin="2,0,2,2">
            <Border Classes="sunken-shadow"
                    CornerRadius="2"
                    ZIndex="100"/>
            <Border Classes="sunken-highlight"
                    CornerRadius="2"
                    ZIndex="100"/>
            
            <Grid RowDefinitions="*,Auto" RowSpacing="8">
                <!-- Sprite Area -->
                <Border Grid.Row="0" Background="{StaticResource Talgonite.Control.Background}"
                        BorderBrush="{StaticResource Talgonite.Border.ShadowBrush}"
                        BorderThickness="0,0,1,1"
                        CornerRadius="2"
                        Width="160" Height="160"
                        Padding="8"
                        Margin="8,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Bottom">
                    <StackPanel Spacing="8" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Label Content="Sprite"
                               FontSize="16"
                               ToolTip.Tip="The sprite being displayed."
                               Padding="0"/>
                        <TextBlock Text="None"
                                   TextAlignment="Center"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource Talgonite.Color.LightGray}"
                                   VerticalAlignment="Center"
                                   IsVisible="{Binding Sprite, Converter={x:Static ObjectConverters.IsNull}, FallbackValue={x:False}}"/>
                        <TextBlock Text="{Binding Sprite, FallbackValue=None}"
                                   TextAlignment="Center"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource Talgonite.Color.White}"
                                   VerticalAlignment="Center"
                                   IsVisible="{Binding Sprite, Converter={x:Static ObjectConverters.IsNotNull}, FallbackValue={x:True}}"/>
                    </StackPanel>
                </Border>
                
                <!-- Menu Area -->
                <Border Grid.Row="0" Background="{StaticResource Talgonite.Control.Background}"
                        BorderBrush="{StaticResource Talgonite.Border.ShadowBrush}"
                        BorderThickness="0,0,1,1"
                        CornerRadius="2"
                        MinWidth="320" MinHeight="160"
                        MaxWidth="540" MaxHeight="300"
                        Padding="8"
                        Margin="8,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom">
                    <ScrollViewer>
                        <ItemsControl ItemsSource="{Binding MenuChoices}">
                            <ItemsControl.DataTemplates>
                                <DataTemplate x:DataType="vm:DialogMenuChoiceViewModel">
                                    <Button Command="{Binding $parent[UserControl].((vm:DialogViewModel)DataContext).SelectMenuChoiceCommand, FallbackValue={x:Null}}"
                                            CommandParameter="{Binding .}"
                                            Classes="outline toolbar"
                                            HorizontalContentAlignment="Stretch">
                                        <Grid ColumnDefinitions="*,Auto" ColumnSpacing="8">
                                            <TextBlock Grid.Column="0"
                                                       Text="{Binding Text}"
                                                       FontSize="14"
                                                       VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="1"
                                                       Text="{Binding PursuitId, StringFormat={}[{0}]}"
                                                       FontFamily="{StaticResource Talgonite.Font.Monospace}"
                                                       FontSize="14"
                                                       Foreground="{StaticResource Talgonite.TextBlock.DimForeground}"
                                                       VerticalAlignment="Center"
                                                       IsVisible="{Binding PursuitId, Converter={x:Static ObjectConverters.IsNotNull}}"/>
                                        </Grid>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.DataTemplates>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>
                
                <!-- Bottom Content Area -->
                <Border Grid.Row="1" Background="{StaticResource Talgonite.Control.Background}"
                        BorderBrush="{StaticResource Talgonite.Border.ShadowBrush}"
                        BorderThickness="0,0,1,1"
                        CornerRadius="2"
                        MinHeight="160"
                        Padding="8"
                        Margin="8,0,8,8">
                    <Grid RowDefinitions="Auto,*,Auto" RowSpacing="4">
                        <Grid Grid.Row="0" ColumnDefinitions="Auto,Auto,*,Auto,Auto" ColumnSpacing="8"
                              Margin="8,4,8,0">
                            <!-- Name -->
                            <TextBlock Grid.Column="0"
                                       Text="{Binding Name}"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource Talgonite.Color.LightBlue}"
                                       VerticalAlignment="Center"/>
                            
                            <!-- Entity Id -->
                            <TextBlock Grid.Column="1"
                                       Text="{Binding EntityId, StringFormat={}0x{0:X}}"
                                       FontFamily="{StaticResource Talgonite.Font.Monospace}"
                                       FontSize="16"
                                       Foreground="{StaticResource Talgonite.Color.LightGray}"
                                       VerticalAlignment="Center"
                                       IsVisible="{Binding EntityId, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                            
                            <!-- Pursuit Id -->
                            <TextBlock Grid.Column="3"
                                       Text="{Binding PursuitId, StringFormat={}Pursuit {0}}"
                                       FontFamily="{StaticResource Talgonite.Font.Monospace}"
                                       FontSize="14"
                                       Foreground="{StaticResource Talgonite.Color.LightGray}"
                                       VerticalAlignment="Center"
                                       IsVisible="{Binding PursuitId, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                            
                            <!-- Pursuit Id -->
                            <TextBlock Grid.Column="4"
                                       Text="{Binding StepId, StringFormat={}Step {0}}"
                                       FontFamily="{StaticResource Talgonite.Font.Monospace}"
                                       FontSize="14"
                                       Foreground="{StaticResource Talgonite.Color.LightGray}"
                                       VerticalAlignment="Center"
                                       IsVisible="{Binding StepId, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                        </Grid>
                        
                        <!-- Content -->
                        <ScrollViewer Grid.Row="1">
                            <TextBlock Text="{Binding Content}"
                                       TextWrapping="WrapWithOverflow"
                                       FontSize="14"
                                       Foreground="{StaticResource Talgonite.Color.DimWhite}"
                                       Margin="8,4"/>
                        </ScrollViewer>
                        
                        <!-- Button Area -->
                        <Grid Grid.Row="2" ColumnDefinitions="Auto,Auto,*,Auto,Auto" ColumnSpacing="8"
                              Margin="0,4,0,0">
                            <!-- Previous Button -->
                            <Button Grid.Column="0"
                                    Command="{Binding NavigatePreviousCommand}"
                                    Classes="outline toolbar"
                                    ToolTip.Tip="Requests the previous dialog step."
                                    MinWidth="120"
                                    HorizontalContentAlignment="Stretch">
                                <Grid ColumnDefinitions="Auto,*">
                                    <Path Grid.Column="0"
                                          Width="16" Height="16"
                                          Stroke="{Binding $parent[Button].Foreground}"
                                          Data="{StaticResource Talgonite.Icon.LeftChevron}"/>
                                    <TextBlock Grid.Column="1" Text="Previous"
                                               FontSize="14"
                                               TextAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </Button>
                            <!-- Next Button -->
                            <Button Grid.Column="1"
                                    Command="{Binding NavigateNextCommand}"
                                    Classes="outline toolbar"
                                    ToolTip.Tip="Requests the next dialog step."
                                    MinWidth="120"
                                    HorizontalContentAlignment="Stretch">
                                <Grid ColumnDefinitions="*,Auto">
                                    <TextBlock Grid.Column="0" Text="Next"
                                               FontSize="14"
                                               TextAlignment="Center"
                                               VerticalAlignment="Center"/>
                                    <Path Grid.Column="1"
                                          Width="16" Height="16"
                                          Stroke="{Binding $parent[Button].Foreground}"
                                          Data="{StaticResource Talgonite.Icon.RightChevron}"/>
                                </Grid>
                            </Button>
                            <!-- Top Button -->
                            <Button Grid.Column="3"
                                    Command="{Binding NavigateTopCommand}"
                                    Classes="outline toolbar"
                                    ToolTip.Tip="Requests the initial dialog step."
                                    MinWidth="120">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <Path Width="16" Height="16"
                                          Stroke="{Binding $parent[Button].Foreground}"
                                          Data="{StaticResource Talgonite.Icon.ArrowUp}"/>
                                    <TextBlock Text="Top"
                                               FontSize="14"
                                               TextAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <!-- Close Button -->
                            <Button Grid.Column="4"
                                    Command="{Binding CloseDialogCommand}"
                                    Classes="outline toolbar destructive"
                                    ToolTip.Tip="Closes the currently open dialog."
                                    MinWidth="120">
                                <StackPanel Orientation="Horizontal" Spacing="12">
                                    <Path Width="16" Height="16"
                                          Stroke="{Binding $parent[Button].Foreground}"
                                          Data="{StaticResource Talgonite.Icon.CrossX}"/>
                                    <TextBlock Text="Close"
                                               FontSize="14"
                                               TextAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </Grid>
                </Border>    
            </Grid>
        </Grid>
    </Grid>
</UserControl>
